{
  "name": "the-reed-be",
  "version": "1.0.0",
  "description": "",
  "author": "NightfuryEquinn",
  "private": true,
  "license": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "db:types": "kysely-codegen --out-file ./src/kysely/schema.ts",
    "db:create": "node -r esbuild-register scripts/migrate.ts create",
    "db:up": "node -r esbuild-register scripts/migrate.ts up && pnpm db:types",
    "db:down": "node -r esbuild-register scripts/migrate.ts down && pnpm db:types",
    "db:latest": "node -r esbuild-register scripts/migrate.ts latest && pnpm db:types",
    "db:reset": "node -r esbuild-register scripts/populate.ts",
    "db:seed": "pnpm db:latest && pnpm db:reset --reset-only"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@scalar/nestjs-api-reference": "^0.5.14",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.2",
    "kysely": "^0.28.5",
    "kysely-migration-cli": "^0.4.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {}
}
